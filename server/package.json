{
    "name": "server",
    "description": "Serveur du projet de base pour le cours de LOG2990",
    "version": "1.1.0",
    "private": true,
    "scripts": {
        "start": "nodemon",
        "build": "rimraf out && tsc --project tsconfig.app.json",
        "format": "prettier --config ../.prettierrc.yaml --write \"app/**/*\"",
        "lint": "eslint -c .eslintrc.json \"./app/**/*.ts\" --format stylish",
        "lint:fix": "eslint -c .eslintrc.json \"./app/**/*.ts\" --format stylish --fix",
        "test": "cross-env TS_NODE_PROJECT='./tsconfig.spec.json' mocha --config=.mocharc.json --node-env=test",
        "coverage": "cross-env TS_NODE_PROJECT='./tsconfig.spec.json' nyc mocha --config=.mocharc.json --node-env=test --exit --reporter mocha-multi-reporters --reporter-options configFile=config.json",
        "coverage:only": "cross-env TS_NODE_PROJECT='./tsconfig.spec.json' nyc mocha --config=.mocharc.json --node-env=test --grep %npm_config_file% --exit",
        "test:only": "cross-env TS_NODE_PROJECT='./tsconfig.spec.json' mocha --config=.mocharc.json --node-env=test --grep %npm_config_file%",
        "profile:heap": "npm run build && clinic heapprofiler --collect -- node --expose-gc out/server/app/test/profiler/profiler.js ",
        "profile:cpu": "npm run build && clinic flame --collect -- node --expose-gc out/server/app/test/profiler/profiler.js ",
        "profile:async": "npm run build && clinic bubbleprof --collect -- node --expose-gc out/server/app/test/profiler/profiler.js ",
        "profile": "npm run build && clinic doctor --collect -- node --expose-gc out/server/app/test/profiler/profiler.js "
    },
    "nyc": {
        "check-coverage": true,
        "statements": "70",
        "lines": "70",
        "include": [
            "app/**/*.ts"
        ],
        "extension": [
            ".ts"
        ],
        "exclude": [
            "**/*.spec.ts",
            "app/index.ts",
            "app/server.ts",
            "app/app.ts",
            "app/test/profiler/*.ts"
        ],
        "require": [
            "ts-node/register",
            "tsconfig-paths/register"
        ],
        "reporter": [
            "html",
            "text",
            "cobertura"
        ],
        "all": true,
        "cache": true,
        "sourceMap": true,
        "instrument": true
    },
    "_moduleAliases": {
        "@app": "out/server/app/",
        "@common": "out/common/"
    },
    "dependencies": {
        "bcryptjs": "^2.4.3",
        "chai-as-promised": "^7.1.1",
        "ci": "^2.1.1",
        "cookie-parser": "1.4.5",
        "cors": "2.8.5",
        "debug": "^4.3.2",
        "express": "^4.18.2",
        "express-jwt": "^8.4.0",
        "http-status-codes": "^2.1.4",
        "jsonwebtoken": "^9.0.0",
        "module-alias": "^2.2.2",
        "mongodb": "^4.5.0",
        "mongodb-memory-server": "^8.4.0",
        "morgan": "^1.10.0",
        "prettier": "^2.3.2",
        "reflect-metadata": "^0.1.13",
        "serve-favicon": "~2.5.0",
        "socket.io": "^4.5.4",
        "swagger-jsdoc": "^6.1.0",
        "swagger-ui-express": "^4.1.6",
        "typedi": "^0.10.0",
        "uuid": "^9.0.0"
    },
    "devDependencies": {
        "@types/bcryptjs": "^2.4.2",
        "@types/body-parser": "1.19.1",
        "@types/chai": "^4.2.21",
        "@types/chai-as-promised": "^7.1.5",
        "@types/cookie-parser": "1.4.2",
        "@types/cors": "2.8.12",
        "@types/express": "4.17.13",
        "@types/jsonwebtoken": "^9.0.1",
        "@types/mocha": "^9.0.0",
        "@types/morgan": "~1.9.3",
        "@types/node": "~16.6.1",
        "@types/node-uuid": "0.0.29",
        "@types/sinon": "^10.0.2",
        "@types/supertest": "^2.0.11",
        "@types/swagger-jsdoc": "^6.0.1",
        "@types/swagger-ui-express": "^4.1.3",
        "@types/uuid": "^9.0.1",
        "@typescript-eslint/eslint-plugin": "^4.28.2",
        "@typescript-eslint/parser": "^4.28.2",
        "chai": "~4.3.4",
        "clinic": "^11.1.0",
        "cross-env": "^7.0.3",
        "eslint": "^7.32.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-import-resolver-typescript": "^2.4.0",
        "eslint-plugin-deprecation": "^1.2.1",
        "eslint-plugin-import": "^2.24.0",
        "eslint-plugin-jsdoc": "^36.0.7",
        "eslint-plugin-prefer-arrow": "^1.2.3",
        "eslint-plugin-prettier": "^3.4.0",
        "eslint-plugin-unicorn": "^35.0.0",
        "mocha": "^9.0.3",
        "mocha-junit-reporter": "^2.2.0",
        "mocha-multi-reporters": "^1.5.1",
        "module-alias": "^2.2.2",
        "nodemon": "^2.0.12",
        "nyc": "^15.1.0",
        "rimraf": "3.0.2",
        "sinon": "^11.1.2",
        "socket.io-client": "^4.5.4",
        "source-map-support": "^0.5.19",
        "supertest": "^6.3.3",
        "ts-node": "^10.2.0",
        "tsconfig-paths": "^3.10.1",
        "typescript": "^4.3.5"
    }
}
